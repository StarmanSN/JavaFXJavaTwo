<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxjavatwo.Controllers">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <TextArea fx:id="mainTextArea" VBox.vgrow="ALWAYS" disable="true" opacity="0.9" visible="true" editable="true"/>
    <TextField fx:id="enter" onAction="#enter"/>
    <Button text="Отправить сообщение" onAction="#onButtonClick"/>
</VBox>
